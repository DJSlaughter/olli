<h1>List -- <%= @list.name  %></h1>

<h2> Movies </h2>

<% @list.movie_lists.each do |movie_list| %>
  <p><%= movie_list.movie.name %></p>
  <p><%= movie_list.movie.release_date %></p>
  <p><%= movie_list.movie.overview %></p>
  <p><%= image_tag movie_list.movie.poster_url %></p>
  <p><%= link_to "Remove movie", list_remove_movie_path(list_id: @list.id, id: movie_list.id),  method: :delete %></p>
  <% end %>


<p>

<%= simple_form_for @movie, method: "get", url:list_search_results_path(@list.id) do |f| %>
  <%= f.input :name %>
  <%= f.button :submit %>
<% end %>


</p>



