<% if !@search_result.nil? %>
<div class="container">
<div class="row">
  <h1>Search Results</h1>
  <% @search_result.each do |m| %>
  <div class="col-xs-12 col-sm-3">
    <hr>
    <h5><%= m.title %></h5>
    <%= link_to "Add this movie to #{@list.name}", list_add_movie_path(title: m.title, release_date: m.releasedate, overview: m.overview, poster_url: "https://image.tmdb.org/t/p/w640/#{m.poster_path}") %>
    <hr>
    <%= image_tag "https://image.tmdb.org/t/p/w640/#{m.poster_path}", class:'img-responsive', :width => 360, :height => 500, :crop => :fill %>
    <hr>
  </div>
  <% end %>
  <% end %>
</div>
</div>

