


<% if !@movies_out.nil? %>
<div class="row">
  <% @movies_out.each do |m| %>
  <%= link_to movie_path(m) do %>
  <p><%= m.name %></p>
  <% end %>
  <p><%= m.overview %></p>
  <p><%= image_tag m.poster_url %></p>
  <% end %>
</div>
<% end %>





<div class="container">
  <div class="row">


    <section class="readme-section" id="avatar">
     <div class="text-center product-header">
      <p>Your <span>Movies</span> lists</p>
    </div>





    <!-- The next div must be inside of a list of movies lists -->
    <% @lists.each do |list| %>
    <div class="col-xs-12 col-sm-4">


                <%= image_tag movie.poster_url, class: "movie-poster" %>
              </div>
              <% end %>
            </div>
            <div class="card-title">
              <p class="text-center"><%= list.name %></p>
            </div>
            <%= link_to "See more", list_path(list.id), class: "btn btn-lg button-hover" %>
            <%= link_to "Remove list", list_path(list.id), class: "btn btn-lg button-hover", method: :delete %>


      <div class="card">

        <div class="card-title">
          <p class="text-center"><%= list.name %></p>
        </div>

        <div class="row">
         <div class="movies-card">
          <% list.movies.limit(4).each do|movie| %>


          <div class="col-xs-6 movies-borders">

            <%= image_tag movie.poster_url, class: "movie-poster" %>
          </div>
          <% end %>
        </div>
<p><%= link_to "See more", list_path(list.id), class:"navbar-wagon-item navbar-button btn text-center" %> </p>

      </div>
    </div>
  </div>
  <% end %>
</div>

<!-- end of each -->


