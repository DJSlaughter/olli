<!--  Personal recommendations sent by friends  -->
<div class="follow-section">

  <div class="container">
    <div class="row">


      <div class="text-center product-header">
        <p>People you <span>follow</span></p>

      </div>

      <div class="product">
        <div class="row">
          <% current_user.followees.each do |followee| %>
          <div class="col-sm-2">
            <%= link_to user_path(followee) do %>
            <%= render 'shared/user_card', user: followee %>
            <% end %>
          </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">



      <div class="text-center product-header">
        <p>Your <span>Followers</span></p>
      </div>

      <div class="product">
        <div class="row">
          <% current_user.followers.each do |followers| %>
          <div class="col-sm-2">
            <%= link_to user_path(followers) do %>
            <%= render 'shared/user_card', user: followers %>
            <% end %>
          </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>

