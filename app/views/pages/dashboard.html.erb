<% if !@movies_out.nil? %>
<div class="row">
 <% @movies_out.each do |m| %>
 <%= link_to movie_path(m) do %>
 <p><%= m.name %></p>
 <% end %>
 <p><%= m.overview %></p>
 <p><%= image_tag m.poster_url %></p>
 <% end %>
</div>
<% end %>





<div class="container">
 <div class="row">


   <section class="readme-section" id="avatar">
    <div class="product-header text-center">
     <p>Your <span>Movies</span> lists</p>
   </div>





   <!-- The next div must be inside of a list of movies lists -->
   <% @lists.each do |list| %>
   <div class="col-xs-12 col-sm-3">


     <div class="card">

       <div class="card-title">
         <p class="text-center"><%= list.name %></p>
       </div>

       <div class="row">
        <div class="movies-card">
         <% list.movies.limit(4).each do|movie| %>


         <div class="col-xs-6 movies-borders">

           <%= image_tag movie.poster_url, class: "movie-poster" %>
         </div>
         <% end %>
       </div>
<p><%= link_to "See more", list_path(list.id), class:"navbar-wagon-item navbar-button btn text-center" %> </p>

<%= link_to "Remove list", list_path(list.id), method: :delete %>
     </div>
   </div>
 </div>
 <% end %>
</div>

<!-- end of each -->


 <p class="text-center"><%= link_to "Create a new List", new_list_path, class:"navbar-wagon-item navbar-button btn text-center" %>
     </p>



<!-- button -->






<!-- endd of button -->

<!--  Personal recommendations sent by friends  -->
<div class="follow-section">

 <div class="container">
   <div class="row">


     <div class="text-center product-header">
       <p>People you <span>follow</span></p>

     </div>

     <div class="product">
       <div class="row">
         <% current_user.followees.each do |followee| %>
         <div class="col-sm-2">
           <%= link_to user_path(followee) do %>
           <%= render 'shared/user_card', user: followee %>
           <% end %>
         </div>
         <% end %>

       </div>
     </div>
   </div>
 </div>

 <div class="container">
   <div class="row">



     <div class="text-center product-header">
       <p>Your <span>Followers</span></p>
     </div>

     <div class="product">
       <div class="row">
         <% current_user.followers.each do |followers| %>
         <div class="col-sm-2">
           <%= link_to user_path(followers) do %>
           <%= render 'shared/user_card', user: followers %>
           <% end %>
         </div>
         <% end %>

       </div>
     </div>
   </div>
 </div>
